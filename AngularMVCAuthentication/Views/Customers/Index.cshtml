@model IEnumerable<Persistance.DataModel.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Model.Any())
{
    <h2>We Dont have customers</h2>
}
else
{

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "New", new { @class="btn "})
</p>
<table class="table table-striped table-hover">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSubscribedToNewsLetter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType.Name )
        </th> 
        <th></th>
    </tr>

@foreach (var customer in Model) {
    <tr>        
        <td>@Html.ActionLink(customer.Name,"Edit","Customers", new { id=customer.Id},null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.IsSubscribedToNewsLetter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.MembershipType.Name)
        </td> 
        <td> 
            @Html.ActionLink("Delete", "Delete", new { id= customer.Id })
        </td>
    </tr>
}

</table>


}