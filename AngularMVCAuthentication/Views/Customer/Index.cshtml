@model IEnumerable<Persistance.DataModel.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSubscribedToNewsLetter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType.DiscountRate )
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th></th>
    </tr>

@foreach (var customer in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => customer.MembershipType.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.IsSubscribedToNewsLetter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.MembershipType.DiscountRate )
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.CreatedBy)
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id= customer.Id }) |
            @Html.ActionLink("Details", "Details", new { id= customer.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id= customer.Id })
        </td>
    </tr>
}

</table>
