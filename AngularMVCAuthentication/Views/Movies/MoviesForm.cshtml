@model AngularMVCAuthentication.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MoviesForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "Please fix errors")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ArrivalDate)
        @Html.TextBoxFor(m => m.ArrivalDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ArrivalDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DirectorName)
        @Html.TextBoxFor(m => m.DirectorName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DirectorName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.InStock)
        @Html.TextBoxFor(m => m.InStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.InStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select one", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-primary">save</button>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

}