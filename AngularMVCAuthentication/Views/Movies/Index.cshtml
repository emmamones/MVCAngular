@model IEnumerable<Persistance.DataModel.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div ng-controller="GenreController">

    <button type="button" ng-click="GetGenres()">show json</button>

    <div ng-controller="MoviesController">

        <select ng-model="optGenre" ng-change="GetMoviesByGenre(optGenre)" ng-options="genre.Id as genre.Name for genre in modelGenre"></select>
        {{optGenre}}

        <select ng-model="optMovie" ng-options="movie.Id as movie.Name for movie in modelMovie"></select>

        <hr />
        <input type="text" ng-model="search" value="" />
        <table class="table table-striped table-hover">
            <tr>
                <td ng-click="Sort('Name')">Name</td>
                <td>ReleaseDate</td>
                <td>ArrivalDate</td>
                <td ng-click="Sort('DirectorName')">DirectorName</td>
                <td>InStock</td>
                <td>Genre</td>
            </tr>
            <tr ng-repeat="movie in modelMovie | filter:search | orderBy:key:AscOrDesc">
                <td>{{movie.Name | uppercase}}</td>
                <td> 
                    <div class="control-group input-append">
                        <input type="text" ng-model="movie.ReleaseDate" data-date-format="dd/mm/yyyy" bs-datepicker>
                        <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
                    </div>
                </td>
                <td>{{movie.ArrivalDate}}</td>
                <td>{{movie.DirectorName}}</td>
                <td><input type="text" ng-model="movie.InStock" /></td>
                <td><select ng-model="movie.GenreId"  ng-options="genre.Id as genre.Name for genre in modelGenre"></select></td>

            </tr>

        </table>

    </div>


</div>
