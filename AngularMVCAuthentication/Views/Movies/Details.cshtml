@model AngularMVCAuthentication.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*THis is a Comment
    On multiple Lines
*@

 
@if (Model.Customers==null || Model.Customers.Count == 0 || Model.Movie == null)
{
    <p>No one has rent this movie before</p>
}
else
{

    
    var className = Model.Customers.Count > 3 ? "Popular" : null;


    <h2 class="@className">@Model.Movie.Name</h2>

    <table id="custstomers" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>SignUpFee</th>
                <th>DiscountRate</th>
                <th>DurationInMonths</th>
            </tr>
        </thead>
        @foreach (var customer in @Model.Customers)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null) </td>
                @*Eager loading*@
                <td>  @customer.MembershipType.Name  </td>
                <td>  @customer.MembershipType.SignUpFee  </td>
                <td>  @customer.MembershipType.DiscountRate%  </td>
                <td>  @customer.MembershipType.DurationInMonths  </td>

            </tr>
        }
    </table>
}
