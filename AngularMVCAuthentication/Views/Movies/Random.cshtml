@*@using Persistance.DataModel;*@

@model AngularMVCAuthentication.ViewModels.RandomMovieVIewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*THis is a Comment
    On multiple Lines
*@

@{
    var className = Model.Customers.Count > 3 ? "Popular" : null;
}


<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>No one has rent this movie before</p>
}
else
{

    <table id="custstomers" class="table table-striped table-hover">
        @foreach (var customer in @Model.Customers)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null) </td>
                @*Eager loading*@
                <td>  @customer.MembershipType.DiscountRate  </td>

            </tr>
        }
    </table>
}
